<% provide(:title, 'All boards') %>
<h1>All boards</h1>

<ul class="boards">
	<table>
		<tr>
			<th>Name</th>
			<th>Board Width</th>
			<th></th>
			<th></th>
		</tr>

		<% @boards.each do |b| %>
			<tr>
				<td><%= link_to b.name, board_path(b) %></td>
				<td><%= b.width %></td>
				<td><%= link_to 'Show', b %></td>
				<td><%= link_to 'Destroy', b, method: :delete,
					data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</table>
</ul>

